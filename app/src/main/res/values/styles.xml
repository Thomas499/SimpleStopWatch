<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/mainBackground</item>
    </style>

    <style name="LauncherButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ControlButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>
